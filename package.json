{
  "name": "cayce-cli",
  "description": "A CLI interface to cayce, the most excellent Apex Static Code Analysis tool built with tree-sitter",
  "version": "0.0.8",
  "author": "Codefriar (Kevin Poorman)",
  "bin": {
    "cayce": "bin/run.js"
  },
  "bugs": "https://github.com/CayceCodes/cayce-cli/issues",
  "dependencies": {
    "@oclif/core": "^4",
    "@oclif/plugin-help": "^6",
    "@oclif/plugin-plugins": "^5",
    "cayce-core": "^2.1.4",
    "cayce-types": "^1.0.18",
    "cli-progress": "^3.12.0",
    "glob": "^11.0.1",
    "tree-sitter": "^0.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@eslint/js": "^9.21.0",
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^4",
    "@types/chai": "^5",
    "@types/cli-progress": "^3",
    "@types/mocha": "^10",
    "@types/node": "^22",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "chai": "^5",
    "eslint": "^9.21.0",
    "eslint-config-oclif": "^6",
    "eslint-config-oclif-typescript": "^3",
    "eslint-config-prettier": "^10",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "mocha": "^11",
    "oclif": "^4",
    "shx": "^0.3.4",
    "sinon": "^19.0.2",
    "standard-version": "^9.5.0",
    "ts-node": "^10",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/CayceCodes/cayce-cli",
  "keywords": [
    "oclif"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "type": "module",
  "oclif": {
    "bin": "cayce",
    "dirname": "cayce",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "topics": {
      "hello": {
        "description": "Say hello to the world and others"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CayceCodes/cayce-cli.git"
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "npm run lint",
    "prepack": "oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md",
    "release": "standard-version && git push --follow-tags origin main && npm publish",
    "prepare": "husky"
  },
  "types": "dist/index.d.ts",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
