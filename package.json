{
  "name": "sourceloupe-cli",
  "description": "A CLI interface to SourceLoupe, the most excellent Apex Static Code Analysis tool built with tree-sitter",
  "version": "0.0.1",
  "author": "Codefriar (Kevin Poorman)",
  "bin": {
    "sl": "./bin/run.js"
  },
  "bugs": "https://github.com/codefriar/sourceloupe-cli/issues",
  "dependencies": {
    "@oclif/core": "^4",
    "@oclif/plugin-help": "^6",
    "@oclif/plugin-plugins": "^5",
    "sourceloupe": "^0.0.47",
    "sourceloupe-types": "^1.0.12",
    "tree-sitter": "^0.22.4"
  },
  "devDependencies": {
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^4",
    "@types/chai": "^5",
    "@types/mocha": "^10",
    "@types/node": "^22",
    "chai": "^5",
    "eslint": "^9.21.0",
    "eslint-config-oclif": "^6",
    "eslint-config-oclif-typescript": "^3",
    "eslint-config-prettier": "^10",
    "mocha": "^11",
    "oclif": "^4",
    "shx": "^0.3.4",
    "ts-node": "^10",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/codefriar/sourceloupe-cli",
  "keywords": [
    "oclif"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "type": "module",
  "oclif": {
    "bin": "sl",
    "dirname": "sl",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "topics": {
      "hello": {
        "description": "Say hello to the world and others"
      }
    }
  },
  "repository": "codefriar/sourceloupe-cli",
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint . --ext .ts",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "npm run lint",
    "prepack": "oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md"
  },
  "types": "dist/index.d.ts"
}
